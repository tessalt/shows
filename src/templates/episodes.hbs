{{#each episodesBySeason itemController="season"}}
  <div {{action "toggleSeason" on="click"}}>
    <h3>Season {{number}}</h3>
    <div {{bind-attr class=":season isOpen:open"}}>
      {{#each episodes itemController="episode"}}
        {{errors}}
       <li>{{name}} | <strong>episode {{number}}</strong> <button {{action "vote" 1}}>Upvote</button> <button {{action "vote" -1}}>downvote</button> {{voteCount}}
         <p>{{description}}</p>
       </li>
      {{/each}}
    </div>
  </div>
{{/each}}